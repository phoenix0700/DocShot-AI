# Production Environment Variables

# Supabase (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_KEY=your_production_service_key

# Clerk Auth (Production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_key
CLERK_SECRET_KEY=sk_live_your_key

# Redis (Production - Railway or Redis Cloud)
REDIS_URL=redis://default:password@your-redis-host:6379

# S3 Storage (Production - AWS S3 or compatible)
S3_BUCKET=docshot-screenshots-prod
S3_ACCESS_KEY=your_aws_access_key
S3_SECRET_KEY=your_aws_secret_key
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1

# Integrations
GITHUB_TOKEN=ghp_your_production_token
NOTION_API_KEY=secret_your_production_key

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=DocShot AI <notifications@yourdomain.com>

# App Configuration
NEXT_PUBLIC_APP_URL=https://docshot.ai

# Deployment Secrets
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id
RAILWAY_TOKEN=your_railway_token
SUPABASE_PROJECT_REF=your_supabase_project_ref
SUPABASE_ACCESS_TOKEN=your_supabase_access_token

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Turborepo Remote Cache
TURBO_TOKEN=your_turbo_token
TURBO_TEAM=your_team_name